{
    "manifest_version": 3,
    "name": "Paste2Drive",
    "version": "1.0",
    "description": "Upload clipboard images to Google Drive and paste shareable links in Google Workspace products",
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "storage",
      "identity",
      "contextMenus",
      "notifications"
      
    ],
    "host_permissions": [
      "https://docs.google.com/*",
      "https://sheets.google.com/*",
      "https://slides.google.com/*",
      "https://drive.google.com/*",
      "https://www.googleapis.com/*",
      "https://accounts.google.com/*"
    ],
    "oauth2": {
      "client_id": "638471605976-hg0vurt1qmjccnflflqhv7ckga246fur.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/drive.file",
        "https://www.googleapis.com/auth/drive.readonly",
        "https://www.googleapis.com/auth/userinfo.profile",
        "https://www.googleapis.com/auth/userinfo.email"
      ]
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://docs.google.com/*",
          "https://sheets.google.com/*",
          "https://slides.google.com/*"
        ],
        "js": ["utility.js", "content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["images/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }